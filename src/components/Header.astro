---
export interface Route {
  text: string;
  link: string;
}
export interface Props {
  video?: string;
  cover?: string;
  headerTitle?: string;
  description?: string;
  menu: Route[];
}
import NavPills from "../components/NavPills.astro";
const { video, cover, headerTitle, description, menu } =
  Astro.props.frontmatter || Astro.props;
const coverName = headerTitle.toLowerCase().split(" ")[0];
const coverImage = cover || `/covers/${coverName}.webp`;
---

<header>
  <div class="header-image" style={`background-image: url(${coverImage})`}>
    {
      video && (
        <div class="video-wrapper">
          <video playsinline autoplay muted loop>
            <source src={video} type="video/mp4" />
            Your browser does not support the video tag.
          </video>
        </div>
      )
    }
  </div>
  <div class="header-background"></div>
  <div class="header-menu">
    <NavPills groups={menu} />
  </div>
  <div class="header-content">
    {
      headerTitle && (
        <div class="title-container">
          <h1>{headerTitle}</h1>
        </div>
      )
    }
    {
      description && (
        <div class="description-container">
          <p>{description}</p>
        </div>
      )
    }
  </div>
</header>
<header class="fixed">
  <div class="header-menu">
    <NavPills groups={menu} />
  </div>
</header>

<script>
  const closes = document.querySelectorAll("[data-menu-close]");
  const opens = document.querySelectorAll("[data-menu-open]");
  const float = document.querySelector("[data-menu-floating]");
  if (closes) {
    closes.forEach((close) => {
      close.addEventListener("click", () => {
        if (float) float.classList.add("close");
        document.documentElement.classList.remove("noscroll");
      });
    });
  }
  if (opens) {
    opens.forEach((open) => {
      open.addEventListener("click", () => {
        if (float) float.classList.remove("close");
        document.documentElement.classList.add("noscroll");
      });
    });
  }
</script>

<style is:global lang="scss">
  // Variables
  $header-width: 500px;

  // Root styles
  :root {
    --header-width: $header-width;
  }

  // Floating nav styles
  .floating-nav:not(.close) ~ header {
    pointer-events: none;
    z-index: 99;
    background: unset;
    background-color: transparent;
    border: none;
    box-shadow: unset;

    // Hide all content except pills
    & > *:not(.header-menu) {
      opacity: 0;

      // Show pills with data-pills-open-close attribute
      & > .header-menu .pills[data-pills-open-close],
      [data-header-icon] {
        pointer-events: all;
        opacity: 1;
        background-color: transparent;

        // Pill styles
        & .pill {
          color: var(--color-white);
          fill: var(--color-white);

          &:hover {
            fill: var(--color-theme-blue);
          }

          // Menu open/close styles
          & > [data-menu-open] {
            display: none;
          }

          & > [data-menu-close] {
            display: flex;
          }
        }
      }

      // Logo container styles
      & .logo-container {
        & a.data-logo-color {
          display: none;
        }

        & a.data-logo-white {
          display: block;
        }
      }
    }
  }

  // Fixed header styles
  header.fixed {
    position: fixed;
    z-index: 3;
    display: grid;
    height: auto;
    background: unset;
    background-color: var(--color-white-90);
    border-bottom: 1px solid var(--color-grey-60);
    transition: margin-top 300ms ease;
    margin-top: -200px;

    // Nav styles
    nav {
      padding: 0.6rem 1.5rem;
      padding-bottom: 1rem;

      // Pills styles
      & .pills:not(.important) {
        border-color: transparent;
        background-color: var(--color-grey);

        & .pill {
          color: var(--color-theme-blue);

          &.biograf√≠a,
          &.contacto {
            color: var(--color-theme-orange);

            &:hover,
            &.selected {
              background-color: var(--color-white-80);
            }
          }
        }
      }
    }
  }

  // Body fixed styles
  body.fixed {
    header.fixed {
      margin-top: 0;
    }

    header:not(.fixed) {
      opacity: 0;
    }
  }

  // Header styles
  header {
    width: 100%;
    position: relative;
    z-index: 3;
    margin-bottom: 4rem;
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: auto 1fr;
    justify-items: center;
    align-content: center;
    transition: opacity 300ms ease;
    opacity: 1;

    // Media queries
    @media (min-width: 1601px) {
      height: 700px;
    }

    @media (max-width: 1600px) {
      height: 600px;
    }

    @media (max-width: 1000px) {
      height: 550px;
    }

    @media (max-width: 650px) {
      height: 450px;
    }

    // Small header styles
    &.small {
      margin-bottom: 2rem;

      @media (min-width: 1601px) {
        height: 400px;
      }

      @media (max-width: 1600px) {
        height: 380px;
      }

      @media (max-width: 1000px) {
        height: 360px;
      }

      @media (max-width: 650px) {
        height: 330px;
        overflow: hidden;
        .header-content {
          padding-bottom: 0.4rem;
          .title-container {
            overflow: hidden;
            white-space: wrap;
            h1 {
              width: 100%;
              font-size: 2rem;
              display: -webkit-box;
              -webkit-box-orient: vertical;
              -webkit-line-clamp: 6;
              overflow: hidden;
            }
          }
        }
        // Header background styles
        .header-background {
          background: linear-gradient(
            180deg,
            #cfd7da 1.77%,
            rgba(217, 217, 217, 0) 80.92%
          );
        }
      }
    }

    // Header background and image styles
    .header-background,
    .header-image {
      position: absolute;
      z-index: -1;
      overflow: hidden;
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .title-container {
      flex: 3;
      align-items: flex-end;

      h1 {
        color: var(--color-white);
        line-height: 1;
        padding: 0;
        @media (max-width: 650px) {
          font-size: 2rem;
        }
      }
    }

    &.small {
      .title-container {
        flex-direction: column;
        align-items: flex-end;
        justify-content: flex-end;
        h1,
        small {
          color: var(--color-theme-blue);
        }
      }
    }

    &:not(.small) .header-background {
      background: linear-gradient(
        to top,
        rgba(23, 20, 17, 0.95) 16%,
        rgba(207, 222, 235, 0.19) 83.85%
      );
      &:after {
        content: "";
        background-image: url(/graphics/bg-pattern-black@2x.png);
        background-size: 6.1875rem 6.1875rem;
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
    }

    // Header image styles
    .header-image {
      background-size: cover;
      background-position: center center;
      background-repeat: no-repeat;

      // Video wrapper styles
      .video-wrapper {
        height: 100%;
        width: 100%;
        position: relative;
        overflow: hidden;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;

        // Video styles
        video {
          object-fit: cover;
          position: absolute;
          top: 0;
          left: 0;
          height: 100%;
          width: 100%;
        }
      }
    }

    // Header menu styles
    .header-menu {
      width: var(--header-max-width);
    }

    // Header content styles
    .header-content {
      width: var(--header-max-width);
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
      padding-bottom: 3rem;
    }

    // Title and description container styles
    .title-container,
    .description-container {
      width: min(100%, calc(100% - 4rem));
      display: flex;
      justify-content: flex-start;

      @media (max-width: 650px) {
        justify-content: center;
      }
    }

    // Description container styles
    .description-container {
      flex: 1;
      align-items: flex-start;

      p {
        color: var(--color-white);
      }
    }

    // Credits container styles
    .credits-container {
      width: 100%;
      border: 1px solid red;
      padding: 0 0 1rem 0;
      display: flex;
      justify-content: flex-end;
      align-items: flex-start;
      gap: 3rem;
    }
  }
</style>
