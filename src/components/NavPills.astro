        @media (max-width: 920px) {
          display: none;
        }
      }
      &[data-show-from-mobile] {
        display: flex;
        @media (max-width: 500px) {
          display: none;
        }
      }
    }
    &[data-menu-open],
    &[data-menu-close] {
      cursor: pointer;
    }
    &[data-menu-close] {
      border: 1px solid greenyellow;
      padding-top: calc(0.6rem + 5px);
    }
  }
</style>
