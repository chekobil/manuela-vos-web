---
import SponsorItem from "./SponsorItem.astro";
const list = [
  {
    name: "Agencia YOU",
    text: "Agencia de Branding",
    logo: "agenciaYou",
    url: "http://www.agenciayou.com",
  },
  {
    name: "Post Plastic World",
    text: "Grupo Brit-Pop",
    logo: "postPlasticWorld",
    url: "https://www.instagram.com/post_plastic_world/",
  },
];
---

<section class="sponsor-container">
  <h2>Gold Sponsors</h2>
  <div class="sponsor-list">
    {
      list.map((sponsor) => {
        return (
          <SponsorItem
            name={sponsor.name}
            text={sponsor.text}
            logo={sponsor.logo}
            url={sponsor.url}
          />
        );
      })
    }
  </div>
</section>

<style lang="scss">
  .sponsor-container {
    padding-top: 2rem;
    .sponsor-list {
      padding: 2rem 1rem;
      display: flex;
      justify-content: space-evenly;
      gap: 2rem;
    }
  }
</style>
