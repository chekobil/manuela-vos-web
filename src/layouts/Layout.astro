<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Nunito+Sans:wght@200;300;400;600;800&family=Nunito:wght@200;300;400;500;700;900&family=Open+Sans:wght@300;400&&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<NavFloating groups={menu} />
		{ header === "large" && <Header menu={menu} video={video} cover={cover} title={title} description={description} /> }
		{ header === "small" && <HeaderSmall menu={menu} title={title} description={description} images={images} /> }
		<main class={mainclass}>
			<slot/>
		</main>
		<Footer />
	</body>
</html>

<script>
	const breakpointScroll = 500
	let currentScroll = 0;
	document.addEventListener("scroll", () => {
		let direction;
		const body = document.body
		if (window.scrollY > currentScroll){
			direction = "down"
		} else {
			direction = "up"
		}
		if (window.scrollY >= breakpointScroll && direction === "up") {
			body?.classList.add("fixed")
		} else {
			body?.classList.remove("fixed")
		}
		currentScroll = window.scrollY
	});
</script>

