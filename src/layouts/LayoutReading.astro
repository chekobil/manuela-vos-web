---
export interface Props {
  video?: string;
  cover?: string;
  headerTitle?: string;
  title?: string;
  description?: string;
  header?: string;
  mainclass?: string;
  images?: string[];
  published?: string;
}
import Layout from "./Layout.astro";
const {
  header,
  video,
  cover,
  title,
  headerTitle,
  description,
  images,
  published,
} = Astro.props.frontmatter || Astro.props;
---

<Layout
  mainclass="reading"
  {header}
  {video}
  {cover}
  {title}
  {headerTitle}
  {description}
  {images}
  {published}
>
  <slot />
</Layout>

<script>
  // Los links EXTERNOS se abriran en ventana nueva
  const links = document.querySelectorAll("a");
  if (links?.length) {
    links.forEach((link) => {
      const linkUrl = link.getAttribute("href");
      if (linkUrl?.includes("http")) {
        link.setAttribute("target", "_blank");
      }
    });
  }
</script>
