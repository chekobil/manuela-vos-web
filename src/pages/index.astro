<style lang="sass" define:vars={{ height }}>
	$breakpoint-mobile: 450px
	$breakpoint-tablet: 768px
	$breakpoint-desktop: 980px
	.head
		width: 100%
		display: flex
		gap: 1rem
		align-items: center
		justify-content: center
		:global(.logo)
			min-height: var(--height)
			flex: 1 0
			@media (min-width: $breakpoint-mobile)
				flex-grow: 4
			@media (min-width: $breakpoint-tablet)
				flex-grow: 5
			@media (min-width: $breakpoint-desktop)
				flex-grow: 8
	.text
		font-size: 1.1rem
		padding: 0 1rem
		text-align: justify
		text-justify: inter-word
		h2
			color: var(--color-theme-orange)
			font-weight: 300
			position: relative
			margin-bottom: 4rem
			&:before
				content: ""
				position: absolute
				bottom: -0.5rem
				left: 0
				width: 3rem
				border-bottom: 2px solid var(--color-theme-orange)
		.blog
			.title
				font-size: 1.6rem
				text-align: left
				line-height: 1.1
			.date
				margin-top: 1rem
	.text + .text
		margin-top: 3rem
</style>
